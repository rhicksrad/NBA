{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["lastUpdated", "source", "metric", "unit", "groups"],
  "properties": {
    "lastUpdated": { "type": "string", "format": "date-time" },
    "source": { "$ref": "#/definitions/source" },
    "metric": { "type": "string" },
    "unit": { "type": "string" },
    "groups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["label", "value"],
        "properties": {
          "label": { "type": "string" },
          "value": { "type": "number" },
          "context": { "type": "string" }
        }
      }
    },
    "summary": { "type": "string" }
  },
  "definitions": {
    "source": {
      "type": "object",
      "required": ["name", "url", "updateCadence"],
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "updateCadence": { "type": "string" }
      }
    }
  }
}
