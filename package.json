{
  "name": "nba-previews",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "esbuild components/main.ts --bundle --format=esm --target=es2019 --minify --outfile=assets/js/main.tmp.js && node scripts/finalize-hash.js && node scripts/build-players.js",
    "fetch:active-rosters": "tsx scripts/fetch/bdl_active_rosters.ts",
    "fetch:injuries": "tsx scripts/fetch_injuries.ts",
    "build:data": "pnpm fetch:active-rosters && pnpm fetch:injuries && tsx scripts/data/build_canonical.ts && tsx scripts/data/build_preseason_schedule.ts && tsx scripts/data/build_pace_pressure.ts",
    "build:pace-pressure": "tsx scripts/data/build_pace_pressure.ts",
    "build:players-index": "tsx scripts/build_players_index.ts",
    "build:history:catalog": "tsx scripts/history/build_player_catalog.ts",
    "build:history:birthplaces": "tsx scripts/history/build_birthplace_lookup.ts",
    "build:history": "pnpm build:history:catalog && pnpm build:history:birthplaces",
    "gen:previews": "tsx scripts/generate/preseason_previews.ts && tsx scripts/generate/previews.ts",
    "validate:previews": "tsx scripts/validate/previews_staleness.ts && tsx scripts/validate/links.ts && tsx scripts/validate/rosters_nonempty.ts",
    "previews": "pnpm build:data && pnpm gen:previews && pnpm validate:previews",
    "validate:rosters": "tsx scripts/validate/rosters.ts",
    "dev": "pnpm dlx http-server public --port 4173",
    "predeploy": "pnpm fetch:active-rosters && pnpm fetch:injuries",
    "deploy": "echo 'static site build only'",
    "test": "vitest run",
    "verify:bdl": "tsx scripts/dev/verify_bdl.ts",
    "verify:history": "tsx scripts/history/verify_history_assets.ts",
    "prewarm:player": "tsx scripts/prewarm_bdl.ts",
    "prewarm:demo": "tsx scripts/prewarm_bdl.ts 237 1997 2024"
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "undici": "^7.16.0",
    "yaml": "2.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.35",
    "@types/node": "20.12.7",
    "esbuild": "^0.23.0",
    "tsx": "^4.19.0",
    "typescript": "5.4.5",
    "vitest": "1.4.0"
  }
}
